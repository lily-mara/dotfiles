export DOTFILES=~/.dotfiles

#VIM!
alias vim='vim -X'
alias vi='vim -X'

#this file
if [ -n "$ZSH_VERSION" ]; then
	alias reloada='. ~/.zshrc'
else
	alias reloada='. ~/.bashrc'
fi

#system functions
alias reboot='sudo shutdown -r now'

#scripts
alias nn='$DOTFILES/bin/class-notes/class-notes.sh'
alias ne='vim -X lectures/$(date -I).md'
alias gc='$DOTFILES/bin/git_scripts/git_check.sh ~/git/'
alias renTag='$DOTFILES/bin/git_scripts/rename_tag.sh'
alias gg='$DOTFILES/bin/git_scripts/gist_commit.sh'
alias suspend='sudo $DOTFILES/bin/suspend.sh'
alias speedtest='$DOTFILES/bin/speedtest.sh'
alias screenfetch='$DOTFILES/bin/screenfetch/screenfetch-dev'

#tmux
alias tls='tmux list-sessions'
alias tat='tmux attach -t'
alias tn='tmux new -s'
alias tk='tmux kill-session -t'

#misc
alias coke='echo $(( ($(date +%s) - $(date --date="140203" +%s) )/(60*60*24) ))'
alias pep8='pep8 --ignore=W191'
alias flake8='flake8 --ignore=W191'
alias python='/usr/bin/env python3'
alias miami='ssh -X maranj@ceclnx01.cec.miamioh.edu'
alias ack='ack-grep'
alias t='$DOTFILES/bin/todo/todo.sh -d $DOTFILES/bin/todo/todo.cfg'
